<Window x:Class="ImoutoDesktop.Windows.ImoutoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ImoutoDesktop="clr-namespace:ImoutoDesktop"
    xmlns:ImoutoDesktop_Controls="clr-namespace:ImoutoDesktop.Controls"
    DataContext="{Binding RelativeSource={RelativeSource self}, Path=Surface}"
    Topmost="{Binding Path=Topmost, Source={x:Static ImoutoDesktop:Settings.Default}}"
    Style="{StaticResource ImoutoWindowStyleKey}"
    Loaded="ImoutoWindow_Loaded" Closing="ImoutoWindow_Closing"
    MouseLeftButtonDown="ImoutoWindow_MouseLeftButtonDown" MouseLeftButtonUp="ImoutoWindow_MouseLeftButtonUp"
    MouseMove="ImoutoWindow_MouseMove" LocationChanged="ImoutoWindow_LocationChanged">
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Close" Executed="CloseCommand_Executed" />
    </Window.CommandBindings>
    <Grid>
        <Image Stretch="None" Source="{Binding Path=Image}" SizeChanged="ImoutoWindow_SizeChanged" />
    </Grid>
</Window>